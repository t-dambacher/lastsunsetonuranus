<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Last Sunset On Uranus</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/content/css")
</head>
<body>
    <div class="container">
        <div class="row">
            <nav>
                <div class="col-xs-4"><a href="/Actualites" onclick="return loadView('Actualites');">Actualités</a></div>
                <div class="col-xs-4"><a href="/Medias" onclick="return loadView('Medias');">Medias</a></div>
                <div class="col-xs-4"><a href="/Contact" onclick="return loadView('Contacts');">Contacts</a></div>
            </nav>
        </div>
        <div class="container body-content">
            @RenderBody()
            <div id="view-container">

            </div>
            @RenderSection("SPAViews", required: false)
            <footer>
                <p>&copy; @DateTime.Now.Year - Last Sunset On Uranus</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/site")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
